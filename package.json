{
  "name": "node-crud-api",
  "version": "1.0.0",
  "description": "CRUD API with Node.js",
  "scripts": {
    "start:dev": "nodemon --watch  src src/index.ts",
    "start:prod": "tsc && node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
